const int trigger = 8;
const int echo = 7;

int led = 10;
int distance;
int duration;
void setup() {
pinMode(trigger,OUTPUT);
pinMode(echo,INPUT);
pinMode(led,OUTPUT);
Serial.begin(9600);
}

void loop(){
digitalWrite(trigger,LOW);
delayMicroseconds(2);

digitalWrite(trigger,HIGH);
delayMicroseconds(10);
digitalWrite(trigger,LOW);

duration = pulseIn(echo, HIGH);

distance = 0.034 * duration/2 ; 
Serial.print("cm");
Serial.println ( distance);

if( distance < 5)
{
digitalWrite (led, HIGH);
delay(1000);
digitalWrite(led, LOW);
delay(1000);
}
else
{
digitalWrite(led,LOW);
}
}
